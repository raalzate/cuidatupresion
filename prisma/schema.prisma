generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model RelevantConditions {
  id String @id @default(uuid())
  name String @unique
  patients PatientRelevantConditions[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PatientRelevantConditions {
  id String @id @default(uuid())
  patientId String
  relevantConditionId String
  patient Patient @relation(fields: [patientId], references: [id], onDelete: Cascade)
  relevantCondition RelevantConditions @relation(fields: [relevantConditionId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([patientId, relevantConditionId])
  @@index([patientId])
  @@index([relevantConditionId])
}

model Medications {
  id String @id @default(uuid())
  name String @unique
  patients PatientMedications[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PatientMedications {
  id String @id @default(uuid())
  patientId String
  medicationId String
  patient Patient @relation(fields: [patientId], references: [id], onDelete: Cascade)
  medication Medications @relation(fields: [medicationId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([patientId, medicationId])
  @@index([patientId])
  @@index([medicationId])
}

model AlertTags {
  id String @id @default(uuid())
  name String @unique
  alertThresholds AlertThresholdTags[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AlertThresholdTags {
  id String @id @default(uuid())
  alertThresholdId String
  alertTagId String
  alertThreshold AlertThresholds @relation(fields: [alertThresholdId], references: [id], onDelete: Cascade)
  alertTag AlertTags @relation(fields: [alertTagId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([alertThresholdId, alertTagId])
  @@index([alertThresholdId])
  @@index([alertTagId])
}

model AlertThresholds {
  id String @id @default(uuid())
  patientId String
  patient Patient @relation(fields: [patientId], references: [id])
  diastolicPressure Int @default(0)
  systolicPressure Int @default(0)
  heartRate Int @default(0)
  tags AlertThresholdTags[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([patientId])
}

model Patient {
  id String @id @default(uuid())
  relevantConditions PatientRelevantConditions[]
  medications PatientMedications[]
  alertThresholds AlertThresholds[]
  doctorId String
  doctor Doctor @relation(fields: [doctorId], references: [id])
  name String
  email String @unique
  birthdate DateTime?
  gender String?
  height Int?
  weight Float?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([doctorId])
}

model Doctor {
  id String @id @default(uuid())
  name String
  accessCode String @unique
  patients Patient[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}