generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model RelevantConditions {
  id String @id @default(uuid())
  name String @unique
  patients PatientRelevantConditions[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PatientRelevantConditions {
  id String @id @default(uuid())
  patientId String
  relevantConditionId String
  patient Patient @relation(fields: [patientId], references: [id], onDelete: Cascade)
  relevantCondition RelevantConditions @relation(fields: [relevantConditionId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([patientId, relevantConditionId])
  @@index([patientId])
  @@index([relevantConditionId])
}

model Medications {
  id String @id @default(uuid())
  name String @unique
  patients PatientMedications[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PatientMedications {
  id String @id @default(uuid())
  patientId String
  medicationId String
  patient Patient @relation(fields: [patientId], references: [id], onDelete: Cascade)
  medication Medications @relation(fields: [medicationId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([patientId, medicationId])
  @@index([patientId])
  @@index([medicationId])
}

model Tags {
  id String @id @default(uuid())
  name String @unique
  measurements MeasurementTags[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model MeasurementTags {
  id String @id @default(uuid())
  measurementId String
  tagId String
  measurement Measurements @relation(fields: [measurementId], references: [id], onDelete: Cascade)
  tag Tags @relation(fields: [tagId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([measurementId, tagId])
  @@index([measurementId])
  @@index([tagId])
}

model Measurements {
  id String @id @default(uuid())
  patientId String
  patient Patient @relation(fields: [patientId], references: [id])
  diastolicPressure Int @default(0)
  systolicPressure Int @default(0)
  heartRate Int @default(0)
  tags MeasurementTags[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([patientId])
}

model Patient {
  id String @id @default(uuid())
  relevantConditions PatientRelevantConditions[]
  medications PatientMedications[]
  measurements Measurements[]
  notifications Notifications[]
  doctorId String
  doctor Doctor @relation(fields: [doctorId], references: [id])
  name String
  email String @unique
  birthdate DateTime?
  gender String?
  height Int?
  weight Float?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([doctorId])
}

model Doctor {
  id String @id @default(uuid())
  name String
  accessCode String @unique
  patients Patient[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum NotificationType {
  MEDICAMENTO
  CITA_MEDICA
  TOMA_PRESION
}

model Notifications {
  id String @id @default(uuid())
  patientId String
  patient Patient @relation(fields: [patientId], references: [id])
  type NotificationType
  startDate DateTime
  repeatInterval Int @default(0)
  additionalNotes String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index(patientId)
}